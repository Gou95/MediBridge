<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SeeAllDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp">


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backarrow"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Deatils"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="10dp"/>


        </LinearLayout>


        <TextView
            android:id="@+id/txt_dateOftime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date time"
            android:textColor="@color/light_white"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:gravity="center"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/recyclerView"
            android:layout_marginTop="10dp"
           />






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Medicine in the Cart"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0.00"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textSize="15sp"/>




        </RelativeLayout>

        <ImageView
            android:id="@+id/img_whatsapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:src="@drawable/whatsapp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:background="@null"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_printInvoice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/green"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Print Invoice"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>